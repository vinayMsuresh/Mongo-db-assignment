<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Insert Category</title>
  </head>
  <body>
    <h1 class="text-center bg-primary text-white p-2">Update Category</h1>
    <div class="container">
        <form method="post" action="<%=`/updatecategory/${data._id}`%>">
            <div class="form-group row">
              <label for="cname" class="col-sm-2 col-form-label">Category name</label>
              <div class="col-sm-7">
                <input type="text" class="form-control" id="cname" name="cname" value="<%=data.cname%>">
              </div>
            </div>
            <div class="form-group row">
              <label for="path" class="col-sm-2 col-form-label">Category Path</label>
              <div class="col-sm-7">
                <input type="text" class="form-control" id="path" name="path" value="<%=data.image%>">
              </div>
            </div>
            <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-info ">Update category</button> </div>
          </form>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>